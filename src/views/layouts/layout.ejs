<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%- pageTitle %></title>
    <link rel="icon" type="image/jpg" href="/images/skibidi.jpg">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link rel="stylesheet" href="/css/app.css">
</head>

<body>
    <div class="d-flex"  style="background-color: #e2e4e6;">
        <% if (!isLoginPage) { %>
            <%- include('../partials/common/sidebar.ejs') %>
        <% } %>
    
        <div class="flex-grow-1">
            <% if (!isLoginPage) { %>
                <%- include('../partials/common/header.ejs') %>
            <% } %>
    
            <div class="p-3 overflow-hidden">
                <main>
                    <%- include('../' + page) %>
                </main>
            </div>
        </div>
    </div>
    
    <!-- Modal thông báo dùng chung -->
	<%- include('../partials/modals/_alertModal') %>

	<!-- Script -->
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
	<script src="/js/sidebar.js"></script>
	<script src="/js/header.js"></script>
	<script src="/js/submitForm.js"></script>
	<script src="/js/modals/fetchDataSwitchThedoctorWorkFacilityModal.js"></script>
	<script src="/js/modals/fetchCreateScheduleForm.js"></script>

	<!-- Xử lý hiển thị modal thông báo -->
	<script>
		document.addEventListener('DOMContentLoaded', () => {
			const EC = <%= typeof EC !== 'undefined' ? EC : 0 %>;
			const EM = <%= typeof EM !== 'undefined' ? JSON.stringify(EM) : '""' %>;

			if (EC !== 0 && EM) {
				const message = JSON.parse(EM);
				document.getElementById('alertModalMessage').textContent = message;
				const modal = new bootstrap.Modal(document.getElementById('alertModal'));
				modal.show();
			}
		});
	</script>
</body>

</html>