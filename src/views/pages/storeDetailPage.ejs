<div class="p-3 border border-0 rounded shadow-sm bg-white">
	<div class="d-flex justify-content-between align-items-center mb-2">
		<h5 class="text-muted text-uppercase mb-0">Chi tiết cửa hàng</h5>
		<a href="/admin/cua-hang/danh-sach" class="btn btn-secondary rounded-pill">
			<i class="fa-solid fa-arrow-left"></i> Quay lại danh sách
		</a>
	</div>

	<hr>

	<% if (store) { %>
	<div class="row">
		<div class="col-md-4 text-center">
			<img src="/images/upload/<%= store.store_image %>.jpg"
					onerror="this.onerror=null; this.src='/images/user.png';"
					alt="Avatar"
					style="width: 20em; height: 200px; object-fit: cover; border: 1px solid #ccc; border-radius: 4px;">
			<h5 class="mt-3 mb-0"><%= store.name || 'Chưa có tên' %></h5>
			<small class="text-muted">Mã cửa hàng: <%= store.store_id %></small>
		</div>

		<div class="col-md-8">
			<div class="row g-3">
				<div class="col-md-6">
					<div class="p-3 border rounded bg-light">
						<i class="fa-solid fa-phone text-success me-2"></i>
						<strong>Điện thoại:</strong> <span class="text-dark"><%= store.phone || 'Chưa cập nhật' %></span>
					</div>
				</div>

				<div class="col-md-6">
					<div class="p-3 border rounded bg-light">
						<i class="fa-solid fa-calendar-plus text-primary me-2"></i>
						<strong>Ngày tạo:</strong>
						<span class="text-dark">
							<%= store.createdAt ? new Date(store.createdAt).toLocaleString('vi-VN') : '' %>
						</span>
					</div>
				</div>

				<div class="col-md-12">
					<div class="p-3 border rounded bg-light">
						<i class="fa-solid fa-location-dot text-warning me-2"></i>
						<strong>Địa chỉ:</strong> <span class="text-dark"><%= store.address || 'Chưa cập nhật' %></span>
					</div>
				</div>
			</div>
		</div>
	</div>
	<% } else { %>
		<div class="alert alert-warning mb-0">Không tìm thấy thông tin cửa hàng.</div>
	<% } %>
</div>
