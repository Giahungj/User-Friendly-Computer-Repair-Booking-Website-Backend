<div class="p-3 border border-0 rounded shadow-sm bg-white">
    <h5 class="text-muted text-uppercase">Thêm chuyên môn</h5>
    <hr>
    <form action="/admin/chuyen-mon/them-moi" method="POST" enctype="multipart/form-data" class="row g-3">
        <div class="col-md-6">
            <label for="name" class="form-label">Tên chuyên môn</label>
            <input type="text" class="form-control" id="name" name="name" placeholder="Nhập tên chuyên môn" required>
        </div>
        <div class="col-md-6">
            <label for="image" class="form-label">Hình ảnh</label>
            <input type="file" class="form-control" id="image" name="image" accept="image/*">
        </div>
        <div class="col-12">
            <label for="description" class="form-label">Mô tả</label>
            <textarea class="form-control" id="description" name="description" rows="4" placeholder="Nhập mô tả chi tiết"></textarea>
        </div>
        <div class="col-12 d-flex justify-content-end">
            <button type="submit" class="btn btn-success">
                <i class="fa-solid fa-plus"></i> Thêm chuyên môn
            </button>
        </div>
    </form>
</div>
