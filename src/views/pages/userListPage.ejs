<%
    function highlight(text, keyword) {
        if (!keyword) return text;
        const regex = new RegExp(`(${keyword})`, 'gi');
        return text.replace(regex, '<strong class="text-danger">$1</strong>');
    }
%>
<div class="p-3 border border-0 rounded shadow-sm bg-white">
    <div class="d-flex justify-content-between align-items-center mb-2">
        <h5 class="text-muted text-uppercase mb-0">Danh sách tài khoản</h5>
        <a href="/admin/tai-khoan/them-moi" class="btn btn-success rounded-pill">
            <i class="fa-solid fa-plus"></i> Thêm tài khoản
        </a>
    </div>

    <%- include('../partials/searchs/searchUser') %>

    <hr>

    <% if (Array.isArray(users) && users.length > 0) { %>
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th>Họ tên</th>
                        <th>Email</th>
                        <th>Điện thoại</th>
                        <th>Vai trò</th>
                        <th>Hoạt động gần nhất</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach((user, index) => { %>
                        <tr>
                            <td><%= index + 1 %></td>
                            <td><%- highlight(user.name || '', searchQuery) %></td>
                            <td><%- highlight(user.email || '', searchQuery) %></td>
                            <td><%- highlight(user.phone || '', searchQuery) %></td>
                            <td><%= user.role || 'Chưa phân quyền' %></td>
                            <td><%= user.last_active ? new Date(user.last_active).toLocaleString('vi-VN') : 'Chưa đăng nhập' %></td>
                            <td>
                                <a href="/admin/tai-khoan/<%= user.user_id %>/chi-tiet" 
                                class="btn btn-sm btn-secondary" title="Xem">
                                    <i class="fa-solid fa-eye"></i>
                                </a>
                                <a href="/admin/tai-khoan/<%= user.user_id %>/sua" 
                                class="btn btn-sm btn-secondary" title="Sửa">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                </a>
                                <form action="/admin/tai-khoan/<%= user.user_id %>/xoa" method="POST" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-outline-secondary" title="Xoá"
                                            onclick="return confirm('Xác nhận xoá?')">
                                        <i class="fa-solid fa-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    <% } else { %>
        <div class="alert alert-info mb-0">Chưa có tài khoản nào được thêm.</div>
    <% } %>

    <% if (typeof totalPages !== 'undefined' && totalPages > 1) { %>
        <%- include('../partials/common/paginationmall', {
            currentPage: currentPage,
            totalPages: totalPages,
            baseUrl: '/admin/tai-khoan/danh-sach'
        }) %>
    <% } %>
</div>
