<div class="p-3 border border-0 rounded shadow-sm bg-white">
    <div class="d-flex justify-content-between align-items-center mb-2">
        <h5 class="text-muted text-uppercase">Danh sách chuyên môn</h5>
        <a href="/admin/chuyen-mon/them-moi" class="btn btn-success">
            <i class="fa-solid fa-plus"></i> Thêm chuyên môn
        </a>
    </div>
    <hr>
    <% if (EC === 0 && specialties.length > 0) { %>
        <div class="table-responsive">
            <table class="table table-hover table-bordered align-middle">
                <thead class="table-light">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Tên chuyên môn</th>
                        <th scope="col">Mô tả</th>
                        <th scope="col">Hình ảnh</th>
                        <th scope="col">Ngày tạo</th>
                    </tr>
                </thead>
                <tbody>
                    <% specialties.forEach((spec, index) => { %>
                        <tr>
                            <th scope="row"><%= index + 1 %></th>
                            <td><%= spec.name %></td>
                            <td><%= spec.description || '-' %></td>
                            <td>
                                <% if (spec.image) { %>
                                    <img src="/uploads/<%= spec.image %>" alt="avatar" width="60" height="60" class="rounded">
                                <% } else { %>
                                    Không có ảnh
                                <% } %>
                            </td>
                            <td><%= new Date(spec.createdAt).toLocaleDateString('vi-VN') %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    <% } else { %>
        <div class="alert alert-warning">Không có chuyên môn nào.</div>
    <% } %>

    <% if (typeof totalPages !== 'undefined' && totalPages > 1) { %>
        <%- include('../partials/common/paginationmall', {
            currentPage: currentPage,
            totalPages: totalPages,
            baseUrl: '/admin/chuyen-mon/danh-sach'
        }) %>
    <% } %>
</div>