<div class="p-3 border border-0 rounded shadow-sm bg-white">
	<div class="d-flex justify-content-between align-items-center mb-2">
		<h5 class="text-muted text-uppercase mb-0">Chi tiết lịch đặt</h5>
		<a href="/admin/dat-lich/danh-sach" class="btn btn-secondary rounded-pill">
			<i class="fa-solid fa-arrow-left"></i> Quay lại danh sách
		</a>
	</div>

	<hr>

	<% if (repairBooking) { %>
		<div class="row g-2 align-items-start my-4">
			<div class="col-3 text-center">
				<img src="/images/<%= repairBooking.Customer?.customer_id %>.jpg"
					alt="Avatar"
					class="rounded-circle"
					style="width: 140px; height: 140px; object-fit: cover; border: 2px solid #ccc;"
					onerror="this.onerror=null; this.src='/images/user.png';">
				<h5 class="mt-3 mb-1"><%= repairBooking.Customer?.name || 'Khách hàng' %></h5>
				<small class="text-muted">Mã đơn: <%= repairBooking.booking_id %></small>
			</div>

			<div class="col">
				<div class="row g-3">
					<div class="col-6">
						<div class="p-3 border rounded bg-light">
							<i class="fa-solid fa-calendar-days text-primary me-2"></i>
							<strong>Ngày đặt:</strong>
							<span class="text-dark"><%= repairBooking.booking_date || '' %></span>
						</div>
					</div>

					<div class="col-6">
						<div class="p-3 border rounded bg-light">
							<i class="fa-solid fa-clock text-info me-2"></i>
							<strong>Giờ:</strong>
							<span class="text-dark"><%= repairBooking.booking_time || '' %></span>
						</div>
					</div>

					<div class="col-6">
						<div class="p-3 border rounded bg-light">
							<i class="fa-solid fa-mobile-screen-button text-success me-2"></i>
							<strong>Thiết bị:</strong>
							<span class="text-dark"><%= repairBooking.Device?.device_type || '' %> - <%= repairBooking.Device?.brand || '' %></span>
						</div>
					</div>

					<div class="col-6">
						<div class="p-3 border rounded bg-light">
							<i class="fa-solid fa-stethoscope text-warning me-2"></i>
							<strong>Trạng thái:</strong>
							<span class="text-dark"><%= repairBooking.status || '' %></span>
						</div>
					</div>

					<div class="col-12">
						<div class="p-3 border rounded bg-light">
							<i class="fa-solid fa-comment-dots text-secondary me-2"></i>
							<strong>Ghi chú:</strong>
							<span class="text-dark"><%= repairBooking.note || 'Không có' %></span>
						</div>
					</div>

					<div class="col-12">
						<div class="p-3 border rounded bg-light">
							<i class="fa-solid fa-user-wrench text-danger me-2"></i>
							<strong>Kỹ thuật viên:</strong>
							<span class="text-dark"><%= repairBooking.Technician?.User?.name || 'Chưa chỉ định' %></span>
						</div>
					</div>

				</div>
			</div>

            <div class="col-3 text-center">
				<img src="/images/<%= repairBooking.Customer?.customer_id %>.jpg"
					alt="Avatar"
					class="rounded-circle"
					style="width: 140px; height: 140px; object-fit: cover; border: 2px solid #ccc;"
					onerror="this.onerror=null; this.src='/images/user.png';">
				<h5 class="mt-3 mb-1"><%= repairBooking.Technician?.User?.name || 'Chưa chỉ định' %></h5>
				<small class="text-muted">Mã đơn: <%= repairBooking.booking_id %></small>
			</div>
		</div>
	<% } else { %>
		<div class="alert alert-warning mb-0">Không tìm thấy thông tin đặt lịch.</div>
	<% } %>
</div>
