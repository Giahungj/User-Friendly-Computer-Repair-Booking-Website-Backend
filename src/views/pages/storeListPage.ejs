<div class="p-3 border border-0 rounded shadow-sm bg-white">
    <div class="d-flex justify-content-between align-items-center mb-2">
        <h5 class="text-muted text-uppercase mb-0">Danh sách cửa hàng</h5>
        <a href="/admin/cua-hang/them-moi" class="btn btn-success rounded-pill">
            <i class="fa-solid fa-plus"></i> Thêm cửa hàng
        </a>
    </div>

    <hr>

    <% if (Array.isArray(stores) && stores.length > 0) { %>
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th>Tên cửa hàng</th>
                        <th>Địa chỉ</th>
                        <th>Điện thoại</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    <% stores.forEach((store, index) => { %>
                        <tr>
                            <td><%= index + 1 %></td>
                            <td><%= store.name %></td>
                            <td><%= store.address %></td>
                            <td><%= store.phone %></td>
                           <td>
                                <a href="/admin/cua-hang/<%= store.store_id %>/chi-tiet" 
                                class="btn btn-sm btn-secondary" title="Xem">
                                    <i class="fa-solid fa-eye"></i>
                                </a>
                                <a href="/admin/cua-hang/<%= store.store_id %>/sua" 
                                class="btn btn-sm btn-secondary" title="Sửa">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                </a>
                                <form action="/admin/cua-hang/<%= store.store_id %>/xoa" method="POST" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-outline-secondary" title="Xoá" 
                                            onclick="return confirm('Xác nhận xoá?')">
                                        <i class="fa-solid fa-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    <% } else { %>
        <div class="alert alert-info mb-0">Chưa có cửa hàng nào được thêm.</div>
    <% } %>

    <% if (typeof totalPages !== 'undefined' && totalPages > 1) { %>
        <%- include('../partials/common/paginationmall', {
            currentPage: currentPage,
            totalPages: totalPages,
            baseUrl: '/admin/cua-hang/'
        }) %>
    <% } %>
</div>
